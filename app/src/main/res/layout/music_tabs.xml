<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.tabs.TabLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_tabs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:tabBackground="@color/colorAccent"
    app:tabGravity="fill"
    app:tabIconTint="@drawable/tab_icon_selector"
    app:tabIndicatorColor="@color/colorAccent"
    app:tabIndicatorFullWidth="true"
    app:tabIndicatorHeight="1dp"
    app:tabInlineLabel="true"
    app:tabMode="fixed"
    app:tabRippleColor="@color/colorAccent"
    app:tabSelectedTextColor="@color/colorAccent"
    app:tabTextColor="@color/colorAccent2"
    app:tabUnboundedRipple="true">

    <com.google.android.material.tabs.TabItem
        android:id="@+id/music_albums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/u_album_selector" />

    <com.google.android.material.tabs.TabItem
        android:id="@+id/music_artists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/u_artist_selector" />

    <com.google.android.material.tabs.TabItem
        android:id="@+id/music_tracks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/u_song_selector" />

    <com.google.android.material.tabs.TabItem
        android:id="@+id/music_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/u_genre_selector" />

    <com.google.android.material.tabs.TabItem
        android:id="@+id/music_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/u_music_folder_selector" />
</com.google.android.material.tabs.TabLayout>
